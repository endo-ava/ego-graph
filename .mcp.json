{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena@<commit>",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/root/workspace/ego-graph",
        "--enable-web-dashboard=false"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "maestro": {
      "type": "stdio",
      "command": "maestro",
      "args": ["mcp"]
    }
  }
}
